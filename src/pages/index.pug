extends ../layouts/main

block header
  - var activeMenuPage = 'works'
  +header({showLeftBlock: true, showRightBlock: true, pageTitle: 'Работы'})
  include ../components/menu/menu.pug

block content
  include ../components/preloader/preloader.pug
  include ../components/welcome-screen/welcome-screen.pug

  .scroll(block="scrollable")#scrollable
    -for(var i = 0; i < 20; i++)
      div(elem="wrap")
        div(elem="block" data-link="/post.html" style="transform: translate3d(100%, 0, 0); opacity: 0;").animated
          .clearfix(elem="inner-wrap")

            ul(elem="tags-list").lsn.pl0.mb0
              -for(var w = 0; w < randomInt(4, 1); w++)
                li(elem="tags-item") #{randomTag()}

            span(elem="time") /#{addZeroToNumber(i + 1)}

            .cur(elem="image-wrap")
              img(src=randomImage(294, 220), alt="portfolio mini image" elem="image")

            div(elem="label")
              span.transform-middle= randomText()

block footer
  include ../components/footer/footer.pug

block script
  +script('js/jquery.jInvertScroll.min.js')
  +script('js/hammer.min.js')
  +script('js/velocity.min.js')
  +script('js/velocity.ui.min.js')
  +script('js/isMobile.min.js')
  +script('js/indexPage.js')
