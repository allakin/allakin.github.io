extends ../layouts/_index-layout

block content
  .preloader-overlay
    .preloader.loading
      -for(var i = 0; i < 4; i++)
        span.slice

  .scroll(block="scrollable")
    -for(var i = 0; i < 11; i++)
      div(elem="wrap")
        div(elem="block")
          div(elem="image-wrap")
            div(elem="label")
              span.transform-middle  Lorem ipsum dolor sit amet.

            span(elem="time") /12

            img(src="/img/portfolio-mini-image.png", alt="portfolio mini image")
